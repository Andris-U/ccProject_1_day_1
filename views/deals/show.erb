<% location='' %>
  <!-- <div class="container column"> -->
  <div class="container main-list">

    <div class="content-row">
      <div class="item item1">
        <ul>
          <li>
            <h3>Deal details</h3>
          </li>
          <li>
            <h4><%= @deal.name %></h4>
          </li>
          <li>Discount:
            <%= @deal.value %></li>
          <li>Applies to:
            <% @burgers.each do |burger| %>
              <% if burger.id == @deal.burger_id %>
                <%= burger.name %></li>
              <li>Joint:
                <% @joints.each do |joint| %>
                  <% if joint.id == burger.joint_id %>
                    <%= joint.name %></li>
                  <% location = joint.address %><% end %>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </div>
        <div class="map">
          <iframe
            class="gmap"
            width="100%"
            height="100%"
            frameborder="0"
            style="border:0"
            src="https://www.google.com/maps/embed/v1/place?q=<%= location %>&key=AIzaSyDxUuOlDBUjSOYzkyOc6ct7oEFc3nBelhU"
            allowfullscreen="allowfullscreen"></iframe>
        </div>
      </div>

    </div>
    <!-- </div> -->
